# See the manpage fstab(5) for more information.
# device-spec   mount-point     fs-type      options dump pass
UUID=set-uuid-here	/	btrfs	rw,async,noauto,owner,nouser,dev,exec,suid,noatime,lazytime,autodefrag,space_cache=v2,commit=5 0 0
UUID=set-uuid-here /home	btrfs	rw,async,auto,owner,nouser,exec,noatime,lazytime,nosuid,nodev,autodefrag,space_cache=v2,commit=5 0 0

proc /proc proc async,noatime,lazytime,hidepid=invisible 0 0
tmpfs /run tmpfs async,noatime,lazytime,huge=always 0 0
sysfs /sys sysfs async,noatime,lazytime 0 0
configfs /sys/kernel/config configfs async,noatime,lazytime 0 0
dev /dev devtmpfs async,noatime,lazytime 0 0
devpts /dev/pts devpts async,noatime,lazytime,gid=5 0 0
shm /dev/shm tmpfs async,noatime,lazytime,huge=always 0 0
