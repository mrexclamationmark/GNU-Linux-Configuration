GRUB_DISTRIBUTOR="mrtelekinesis"

# Default menu entry
GRUB_DEFAULT=0

# Boot the default entry this many seconds after the menu is displayed
GRUB_TIMEOUT=0
GRUB_TIMEOUT_STYLE=countdown

# Append parameters to the linux kernel command line
GRUB_CMDLINE_LINUX="acpi_irq_nobalance acpi_no_memhotplug acpi_no_watchdog align_va_addr=on apic_extnmi=none atkbd.set=3 atkbd.softraw=0 audit=0 consoleblank=0 cpuidle.governor=menu cryptomgr.notests no_debug_objects debugfs=off hardened_usercopy=on hpet=disable hpet_mmap=1 disable_ipv6=1 dma_debug=off nopku edac_report=off hardlockup_all_cpu_backtrace=0 hugetlb_free_vmemmap=on huge_task_panic=1 i8042.noloop i8042.nomux i8k.restricted init_on_alloc=1 init_on_free=1 kmemleak=off l1d_flush=on l1tf=full,force libata.dma=1 lockdown=confidentiality loglevel=0 log_buf_len=12 logo.nologo mds=full,nosmt memory_corruption_check=1 mem_encrypt=off mitigations=auto,nosmt mousedev.tap_time=5000 nmi_watchdog=0 no_file_caps nosoftlockup nowatchdog oops=panic page_alloc.shuffle=1 page_poison=on pci=pcie_bus_safe pnp.debug=0 printk.devkmsg=off psi=0 psmouse.rate=200 pti=auto pty.legacy_count=5 quiet random.trust_cpu=off randomize_kstack_offset=1 schedstats=0 selinux=0 apparmor=0 slab_nomerge slub_debug=ZFP slub_nomerge softlockup_all_cpu_backtrace=0 spectre_v2=auto spectre_v2_user=auto spec_store_bypass_disable=auto ssbd=force-on transparent_hugepage=always tsx=auto tsx_async_abort=full,nosmt usbcore.authorized_default=2 usbhid.mousepoll=5 usbhid.jspoll=5 usbhid.kbpoll=5 vdso=0 vdso32=0 video=640x480@60 vsyscall=none vt.default_utf8=0 workqueue.power_efficient snd_pcm.maximum_substreams=5 ahci.mobile_lpm_policy=1 pcie_aspm.policy=powersupersave rcutree.rcu_resched_ns=5000000"
#GRUB_EARLY_INITRD_LINUX_CUSTOM="acpitables.cpio"

# Uncomment to disable graphical terminal (grub-pc only)
GRUB_TERMINAL=console

# Grub resolution
GRUB_GFXMODE=640x480

# Text mode
GRUB_GFXPAYLOAD_LINUX=text

# Disable recovery menu generation
GRUB_DISABLE_RECOVERY=true

# Disable Submenu
GRUB_DISABLE_SUBMENU=y

# Disable OS-Prober
GRUB_DISABLE_OS_PROBER=true
