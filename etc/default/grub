GRUB_DISTRIBUTOR="mrtelekinesis"

# Default menu entry
GRUB_DEFAULT=0

# Boot the default entry this many seconds after the menu is displayed
GRUB_TIMEOUT=5
GRUB_TIMEOUT_STYLE=menu

# Append parameters to the linux kernel command line
GRUB_CMDLINE_LINUX="loglevel=1 quiet video=640x480M@60 consoleblank=60 align_va_addr=on psmouse.rate=200 vt.default_utf8=0 no_debug_objects dma_debug=off lockdown=confidentiality usbhid.mousepoll=5 usbhid.kbpoll=5 usbhid.jspoll=5 rcutree.rcu_resched_ns=5000000 ahci.mobile_lpm_policy=1 pci=pcie_bus_safe cpuidle.governor=menu pcie_aspm.policy=powersupersave init_on_alloc=1 init_on_free=1 randomize_kstack_offset=on slab_nomerge pti=on slub_debug=ZF slub_debug=P page_poison=1 vsyscall=none"
#GRUB_EARLY_INITRD_LINUX_CUSTOM="acpitables.cpio"

# Recommended Options for more than 4 cores
# threadirqs

# Uncomment to disable graphical terminal (grub-pc only)
GRUB_TERMINAL=console

# Grub resolution
GRUB_GFXMODE=640x480

# Text mode
GRUB_GFXPAYLOAD_LINUX=text

# Disable recovery menu generation
GRUB_DISABLE_RECOVERY=true

# Disable Submenu
GRUB_DISABLE_SUBMENU=y

# Disable OS-Prober
GRUB_DISABLE_OS_PROBER=true
